<?xml version="1.0"?>
<robot name="ur5e_robot">

  <!-- =========================
       LINKS (with inertials)
       ========================= -->

  <!-- base_link -->
  <link name="base_link">
    <inertial>
      <!-- COM at link origin -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Solid cylinder approx: m=4.0 kg, r=0.06, L=0.05 -->
      <mass value="4.0"/>
      <inertia ixx="0.004433333333333333" ixy="0.0" ixz="0.0"
               iyy="0.004433333333333333" iyz="0.0"
               izz="0.0072"/>
    </inertial>
  </link>

  <!-- shoulder_link -->
  <link name="shoulder_link">
    <inertial>
      <!-- COM from your data -->
      <origin xyz="0 0.00193 -0.02561" rpy="0 0 0"/>
      <!-- m=3.7, r=0.06, L=0.15 -->
      <mass value="3.7"/>
      <inertia ixx="0.0102675" ixy="0.0" ixz="0.0"
               iyy="0.0102675" iyz="0.0"
               izz="0.00666"/>
    </inertial>
  </link>

  <!-- upper_arm_link -->
  <link name="upper_arm_link">
    <inertial>
      <origin xyz="0 -0.024201 0.2125" rpy="0 0 0"/>
      <!-- m=8.393, r=0.054, L=0.425 -->
      <mass value="8.393"/>
      <inertia ixx="0.13245063241666666" ixy="0.0" ixz="0.0"
               iyy="0.13245063241666666" iyz="0.0"
               izz="0.012236994"/>
    </inertial>
  </link>

  <!-- forearm_link -->
  <link name="forearm_link">
    <inertial>
      <origin xyz="0 0.0265 0.11993" rpy="0 0 0"/>
      <!-- m=2.275, r=0.04, L=0.392 -->
      <mass value="2.275"/>
      <inertia ixx="0.030042133333333335" ixy="0.0" ixz="0.0"
               iyy="0.030042133333333335" iyz="0.0"
               izz="0.00182"/>
    </inertial>
  </link>

  <!-- wrist_1_link -->
  <link name="wrist_1_link">
    <inertial>
      <origin xyz="0 0.110949 0.01634" rpy="0 0 0"/>
      <!-- m=1.219, r=0.045, L=0.12 -->
      <mass value="1.219"/>
      <inertia ixx="0.00207991875" ixy="0.0" ixz="0.0"
               iyy="0.00207991875" iyz="0.0"
               izz="0.0012342375"/>
    </inertial>
  </link>

  <!-- wrist_2_link -->
  <link name="wrist_2_link">
    <inertial>
      <origin xyz="0 0.0018 0.11099" rpy="0 0 0"/>
      <!-- m=1.219, r=0.045, L=0.10 -->
      <mass value="1.219"/>
      <inertia ixx="0.0016329520833333335" ixy="0.0" ixz="0.0"
               iyy="0.0016329520833333335" iyz="0.0"
               izz="0.0012342375"/>
    </inertial>
  </link>

  <!-- wrist_3_link -->
  <link name="wrist_3_link">
    <inertial>
      <origin xyz="0 0.001159 0.0" rpy="0 0 0"/>
      <!-- m=0.1879, r=0.0375, L=0.0458 -->
      <mass value="0.1879"/>
      <inertia ixx="9.890414008333333e-05" ixy="0.0" ixz="0.0"
               iyy="9.890414008333333e-05" iyz="0.0"
               izz="0.0001321171875"/>
    </inertial>
  </link>

  <!-- ee_link and tool0 (massless frames; no inertial needed) -->
  <link name="ee_link"/>
  <link name="tool0"/>

  <!-- =========================
       JOINTS (UR5e kinematics)
       Numeric constants only
       d1=0.163, a2=-0.425, a3=-0.392,
       d4=0.127, d5=0.100, d6=0.100
       shoulder_offset=0.138, elbow_offset=-0.131
       ========================= -->

  <!-- J1: shoulder_pan_joint (Z) -->
  <joint name="shoulder_pan_joint" type="revolute">
    <parent link="base_link"/>
    <child  link="shoulder_link"/>
    <origin xyz="0 0 0.163" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-6.283185307" upper="6.283185307" velocity="3.14" effort="150.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- J2: shoulder_lift_joint (Y), +pi/2 tilt -->
  <joint name="shoulder_lift_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child  link="upper_arm_link"/>
    <origin xyz="0 0.138 0.0" rpy="0 1.57079632679 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-6.283185307" upper="6.283185307" velocity="3.14" effort="150.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- J3: elbow_joint (Y) -->
  <joint name="elbow_joint" type="revolute">
    <parent link="upper_arm_link"/>
    <child  link="forearm_link"/>
    <origin xyz="0 -0.131 0.425" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-3.1415926535" upper="3.1415926535" velocity="3.14" effort="150.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- J4: wrist_1_joint (Y), +pi/2 tilt -->
  <joint name="wrist_1_joint" type="revolute">
    <parent link="forearm_link"/>
    <child  link="wrist_1_link"/>
    <origin xyz="0 0 0.392" rpy="0 1.57079632679 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-6.283185307" upper="6.283185307" velocity="6.28" effort="28.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- J5: wrist_2_joint (Z) -->
  <joint name="wrist_2_joint" type="revolute">
    <parent link="wrist_1_link"/>
    <child  link="wrist_2_link"/>
    <origin xyz="0 0.127 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-6.283185307" upper="6.283185307" velocity="6.28" effort="28.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- J6: wrist_3_joint (Y) -->
  <joint name="wrist_3_joint" type="revolute">
    <parent link="wrist_2_link"/>
    <child  link="wrist_3_link"/>
    <origin xyz="0 0 0.100" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-6.283185307" upper="6.283185307" velocity="6.28" effort="28.0"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- fixed ee_link after wrist_3_link -->
  <joint name="ee_fixed_joint" type="fixed">
    <parent link="wrist_3_link"/>
    <child  link="ee_link"/>
    <origin xyz="0 0.100 0" rpy="0 0 1.57079632679"/>
  </joint>

  <!-- fixed tool0 (UR controller TCP convention): translate + rotate X -90Â° -->
  <joint name="wrist_3_link-tool0_fixed_joint" type="fixed">
    <parent link="wrist_3_link"/>
    <child  link="tool0"/>
    <origin xyz="0 0.100 0" rpy="-1.57079632679 0 0"/>
  </joint>

</robot>
